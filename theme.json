{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {"slug": "primary","color": "#0a5d5d","name": "Primary"},
                {"slug": "secondary","color": "#ff8749","name": "Secondary"},
                {"slug": "tertiary","color": "#680000","name": "Tertiary"},
                {"slug": "accent","color": "#0dcaf0","name": "Accent"},
                {"slug": "text-light","color": "#757575","name": "Text Light"},
                {"slug": "bg","color": "#ffffff","name": "bg"},
                {"slug": "bg-gray","color": "#f5f5f5","name": "bg-gray"},
                {"slug": "border","color": "oklch(.92 .01 240)","name": "border"}
            ]
        },
        "spacing": {
            "padding": true
        },
        "typography": {
            "fontFamilies": [
                {"fontFamily": "Jost, system-ui, sans-serif","name": "Jost", "slug": "jost"},
                {"fontFamily": "Inter, system-ui, sans-serif","name": "Inter", "slug": "inter"}
            ],
            "customFontSize": true
        },
        "custom":{
            "breakpoints":{
                "mobile":480,
                "tablet":768,
                "laptop":1024,
                "desktop":1140
            }
        }
    },
    "styles": {
        "color": {
            "background": "#ffffff",
            "text": "#222222"
        },
        "spacing": {
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--jost), var(--wp--preset--font-family--inter), system-ui, sans-serif"
        },
        "elements": {
            "button": {
                "border": {
                    "radius": "8px"
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "search-page",
            "title": "Search Page",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "featured-image-page",
            "title": "Featured Image Page",
            "postTypes": [
                "page"
            ]
        }
    ],
    "templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}